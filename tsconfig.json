{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2019",
      "esnext.asynciterable"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "./dist",
    // "isolatedModules": true,
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src",
    "paths": {
      "@config": [
        "config.ts"
      ],
      "@exceptions/*": [
        "exceptions/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@routes": [
        "routes/index.ts"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    ".env",
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}